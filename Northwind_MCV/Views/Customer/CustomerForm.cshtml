@model Northwind_DAL.Customer

@{
    ViewBag.Title = "CustomerForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>CustomerForm</h2>
<br />
@using (Html.BeginForm("CustomerSave", "Customer", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(x=>x.CustomerID)
        @Html.TextBoxFor(x => x.CustomerID,new {@class="form-control" })
        @Html.ValidationMessageFor(x => x.CustomerID)<br />
        @Html.LabelFor(x=>x.CompanyName)
        @Html.TextBoxFor(x=>x.CompanyName,new {@class="form-control" })
        @Html.ValidationMessageFor(x=>x.CompanyName)<br />
        @Html.LabelFor(x=>x.ContactName)
        @Html.TextBoxFor(x=>x.ContactName,new {@class="form-control" })
        @Html.LabelFor(x => x.ContactTitle)
        @Html.TextBoxFor(x => x.ContactTitle, new { @class = "form-control" })
        @Html.LabelFor(x => x.Address)
        @Html.TextBoxFor(x => x.Address, new { @class = "form-control" })
        @Html.LabelFor(x => x.City)
        @Html.TextBoxFor(x => x.City, new { @class = "form-control" })
        @Html.LabelFor(x => x.Region)
        @Html.TextBoxFor(x => x.Region, new { @class = "form-control" })
        @Html.LabelFor(x => x.PostalCode)
        @Html.TextBoxFor(x => x.PostalCode, new { @class = "form-control" })
        @Html.LabelFor(x => x.Country)
        @Html.TextBoxFor(x => x.Country, new { @class = "form-control" })
        @Html.LabelFor(x => x.Phone)
        @Html.TextBoxFor(x => x.Phone, new { @class = "form-control" })
        @Html.LabelFor(x => x.Fax)
        @Html.TextBoxFor(x => x.Fax, new { @class = "form-control" })

    </div>
    @Html.HiddenFor(x=>x.CustomerID)    
    <button class="btn btn-success" type="submit">Kaydet</button>
}

